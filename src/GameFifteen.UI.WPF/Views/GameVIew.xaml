<UserControl x:Class="GameFifteen.UI.WPF.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameFifteen.UI.WPF.Views"
             xmlns:vms="clr-namespace:GameFifteen.UI.WPF.ViewModels"
             xmlns:helpers="clr-namespace:GameFifteen.UI.WPF.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             
              DataContext="{x:Static vms:ViewModelsSelector.GameViewModel}"
             >
    <Grid>
        <StackPanel>
            <Grid>
                <DockPanel LastChildFill="True">
                    <Button x:Name="ButtonGoToMainMenu" Content="Main menu" 
                            Style="{StaticResource CommonButton}"
                            Command="{Binding SwitchView}" 
                            CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                    <Button x:Name="ButtonBuildMatrix" Content="New Game"
                            Style="{StaticResource CommonButton}"
                            Command="{Binding InitializeGame}"  />
                    <Label Content="{Binding Moves}"   
                           DockPanel.Dock="Right" 
                           Style="{StaticResource GameStatsLabel}"
                           Margin="0,0,70,13" VerticalAlignment="Bottom"  >
                        
                    </Label>
                    <Label Content="Moves: "   
                           DockPanel.Dock="Right" 
                           Style="{StaticResource GameStatsLabel}"
                           />
                    <Label Content="Game 15" 
                           Style="{StaticResource GameStatsLabel}"
                           />
                </DockPanel>
            </Grid>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        Margin="0 20"
                        >
                <StackPanel>
                    <Button x:Name="ButtonUndoMove" Content="⎌"
                            Style="{StaticResource PlayebleTileButton}"
                            FontSize="35"
                            Width="70"
                            Command="{Binding UndoMove}"  />

                    <ItemsControl x:Name="frameTatget" ItemsSource="{Binding TargetTiles}" Grid.Column="0"  HorizontalAlignment="Stretch">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid  HorizontalAlignment="Center"
                            Width="300"
                            Height="300"
                            Margin="25 0"                                
                            Rows="{Binding Rows}"
                            Columns="{Binding Cols}"
                            />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                               
                                    <Button     
                                        Content="{Binding Label}"  
                                       Style="{StaticResource StaticTileButton}"
                                        />
                            
                            </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <ItemsControl x:Name="frame" ItemsSource="{Binding Tiles}"  Grid.Column="1"  HorizontalAlignment="Stretch" >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid  
                            Width="500"
                            Height="500"
                            Margin="0"
                            Rows="{Binding Rows}"
                            Columns="{Binding Cols}"
                            />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            
                            <Button     
                                        Content="{Binding Label}"  
                                        Style="{StaticResource PlayebleTileButton}"
                                        Command="{Binding Path=DataContext.MoveTile, 
                                            RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
                           
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
